{% extends "layout.njk" %}

{% block content %}

<center><h1>List Of Platforms :</h1></center>
<center><h2>Page {{pageNumber}}</h2></center>
<div class="cards">
  {% for platform in platforms %}
    <div class="card">
      <fieldset>
        <a href="/platform/{{ platform.id }}?page=1">
          <img src="{{platform.logo.url}}">
        </a> <br>
        <a href="/platform/{{ platform.id }}?page=1">{{ platform.name }}</a>
      </fieldset>
    </div>
  {% endfor %}
</div>
    {% if pageNumber <= 1 %}
    <div class="cards">
      <div class="card">
        <a href="/platformPages?page={{pageNumber-1}}">
          <button class="button" name="page précédente" disabled>
            page précédente
          </button>
        </a>
      </div>
      <div class="card">
        <a href="/platformPages?page={{pageNumber+1}}">
          <button class="button" name="page suivante">
            page suivante
        </button>
        </a>
      </div>
    </div>
    {% else %}
    <div class="cards">
      <div class="card">
        <a href="/platformPages?page={{pageNumber-1}}">
          <button class="button" name="page précédente">
            page précédente
          </button>
        </a>
      </div>
      <div class="card">
        <a href="/platformPages?page={{pageNumber+1}}">
          <button class="button" name="page suivante">
            page suivante
          </button>
        </a>
      </div>
    </div>
    {% endif %}


{% endblock %}
